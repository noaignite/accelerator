  },
  "devDependencies": {
    "@next/eslint-plugin-next": "15.3.2",
    "@noaignite/style-guide": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.5",
    "pagefind": "^1.3.0",
    "tailwindcss": "^4.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
