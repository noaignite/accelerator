{
  "name": "@noaignite/tailwind-typography",
  "version": "0.1.6",
  "private": false,
  "description": "TailwindCSS plugin to create responsive typography",
  "keywords": [
    "tailwindcss",
    "typography"
  ],
  "bugs": {
    "url": "https://github.com/noaignite/accelerator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noaignite/accelerator.git",
    "directory": "packages/tailwind-typography"
  },
  "author": "NoA Ignite",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test:types": "tsc --noEmit"
  },
  "dependencies": {
    "@noaignite/utils": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "tailwindcss": "^3.4.17"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engine": {
    "node": ">=20.0.0"
  }
}
